{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "imageTemplateName": {
            "type": "string"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]"
    },
    "resources": [
        {
            "name": "[parameters('imageTemplateName')]",
            "type": "Microsoft.VirtualMachineImages/imageTemplates",
            "apiVersion": "2020-02-14",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/galleries/images', concat('SharedGalary',parameters('imageTemplateName')), concat('Image',parameters('imageTemplateName')))]"
            ],
            "tags": {
                "imagebuilderTemplate": "Windows1020H2",
                "userIdentity": "enabled"
            },
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "/subscriptions/a854bf7e-1346-4c47-8c01-b629e5f43323/resourcegroups/ManagedIdentities/providers/Microsoft.ManagedIdentity/userAssignedIdentities/WVD_ImageBuilder": {}
                }
            },
            "properties": {
                "buildTimeoutInMinutes": 100,
                "vmProfile": {
                    "vmSize": "Standard_B1ms",
                    "osDiskSizeGB": 127
                },
                "source": {
                    "type": "PlatformImage",
                    "publisher": "microsoftwindowsdesktop",
                    "offer": "office-365",
                    "sku": "20h2-evd-o365pp",
                    "version": "latest"
                },
                "customize": [
                    {
                        "type": "PowerShell",
                        "inline": [
                            "New-Item -Path HKLM:\\Software\\Microsoft\\DesiredStateConfiguration",
                            "New-ItemProperty -Path HKLM:\\Software\\Microsoft\\DesiredStateConfiguration -Name 'AgentId' -PropertyType STRING -Force"
                        ]
                    },
                    {
                        "type": "PowerShell",
                        "name": "settingUpFirewall",
                        "inline": [
                            "Set-NetFirewallProfile -Profile 'Domain','Public','Private' -Enabled False"
                        ],
                        "runElevated": true
                    },
                    {
                        "type": "PowerShell",
                        "name": "Intalling Powershell Modules",
                        "scriptUri": "https://raw.githubusercontent.com/wdeve/WVD/main/Install-PSModules.ps1",
                        "runElevated": true
                    },
                    
                    {
                        "type": "PowerShell",
                        "name": "Install_FSLogix",
                        "scriptUri": "https://raw.githubusercontent.com/michawets/AzureImageBuilderPOC/master/scripts/install_FSLogix.ps1",
                        "runElevated": true
                    },
                    {
                        "type": "WindowsRestart",
                        "restartCheckCommand": "echo Azure-Image-Builder-Restarted-the-VM",
                        "restartTimeout": "10m"
                    }
                ],
                "distribute": [
                    {
                        "type": "SharedImage",
                        "galleryImageId": "[resourceId('Microsoft.Compute/galleries/images', concat('SharedGalary',parameters('imageTemplateName')), concat('Image',parameters('imageTemplateName')))]",
                        "runOutputName": "[concat(parameters('imageTemplateName'), uniqueString(resourceGroup().id))]",
                        "replicationRegions": [
                           "[variables('location')]"
                        ]
                    }
                ]
            }
        }
    ]
}